<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity"
    android:background="@color/white"
    >
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_note"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/drawer"
        app:rippleColor="@color/purple_200"
        tools:ignore="ContentDescription"
        />

    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/drawer"
        android:visibility="visible"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="400dp"
            >
            <ImageView
                android:id="@+id/imageView_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_supervised_user_circle_24"
                tools:ignore="ContentDescription"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/cardView_profile"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:id="@+id/subjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/drawer_icons_marginTop"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_subject"
                    tools:ignore="ContentDescription"
                    android:background="@drawable/drawer_ic_layout"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textViews_Color"
                    android:text="@string/subjects"
                    android:layout_marginTop="6dp"
                    android:padding="1dp"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/drawer_icons_marginTop"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_tag"
                    tools:ignore="ContentDescription"
                    android:background="@drawable/drawer_ic_layout"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textViews_Color"
                    android:text="@string/tags"
                    android:layout_marginTop="6dp"
                    android:padding="1dp"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/drawer_icons_marginTop"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_priority"
                    tools:ignore="ContentDescription"
                    android:background="@drawable/drawer_ic_layout"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textViews_Color"
                    android:text="@string/priority"
                    android:layout_marginTop="6dp"
                    android:padding="1dp"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/drawer_icons_marginTop"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_info"
                    tools:ignore="ContentDescription"
                    android:background="@drawable/drawer_ic_layout"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textViews_Color"
                    android:text="@string/about_us"
                    android:layout_marginTop="6dp"
                    android:padding="1dp"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_exit_to_app"
                tools:ignore="ContentDescription"
                android:background="@drawable/drawer_ic_layout"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textViews_Color"
                android:text="@string/exit"
                android:layout_marginTop="6dp"
                android:padding="1dp"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/drawer"
        android:layout_toEndOf="@id/drawer"
        android:layout_marginStart="1dp"
        >
        <ImageView
            android:id="@+id/close_drawer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_drawer"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            tools:ignore="ContentDescription"
            />
        <TextView
            android:id="@+id/txt_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textViews_Color"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/close_drawer"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/app_name"
            android:visibility="visible"
            />
        <EditText
            android:id="@+id/editText_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textViews_Color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/close_drawer"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@id/search"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:hint="@string/Search"
            android:textColorHint="@color/textViews_Color"
            android:visibility="gone"
            android:inputType="text" />
        <ImageView
            android:id="@+id/search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_toEndOf="@id/drawer"
        android:layout_below="@id/title_layout"
        android:visibility="visible"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            >
            <ImageView
                android:id="@+id/ic_layout_mode"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_vertical_layout"
                tools:ignore="ContentDescription"
                />
            <RelativeLayout
                android:id="@+id/layout_choose_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_toStartOf="@id/ic_layout_mode"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:id="@+id/ic_showMode"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/baseline_arrow_right_24"
                    tools:ignore="ContentDescription"
                    android:layout_alignParentEnd="true"
                    />
                <TextView
                    android:id="@+id/textView_showMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/ic_showMode"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:text="@string/all_note"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_view"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
        <LinearLayout
            android:id="@+id/layout_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/note_bg"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="8dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/HighPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/HighPriority"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                app:drawableEndCompat="@drawable/high_priority"
                 />
            <TextView
                android:id="@+id/MediumPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/MediumPriority"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:drawableEndCompat="@drawable/medium_priority"
                />
            <TextView
                android:id="@+id/LowPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/LowPriority"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:drawableEndCompat="@drawable/low_priority"
                />
            <TextView
                android:id="@+id/NoPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/NoPriority"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:drawableEndCompat="@drawable/ic_flag"
                />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:scrollbars="none"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/NoNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NoFound"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="350dp"
            android:textSize="18sp"
            android:visibility="gone"
            />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_toEndOf="@id/drawer"
        android:layout_below="@id/title_layout"
        android:visibility="gone"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</RelativeLayout>